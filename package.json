{
  "name": "course-player",
  "version": "1.0.0",
  "description": "A video course player application for local video files",
  "author": "dannsb",
  "homepage": ".",
  "private": true,
  "main": "dist-electron/main.js",
  "dependencies": {
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@videojs/themes": "^1.0.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron-squirrel-startup": "^1.0.1",
    "lucide-react": "^0.548.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-scripts": "5.0.1",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.4.0",
    "video.js": "^8.23.4",
    "videojs-hotkeys": "^0.2.30",
    "videojs-theme-kit": "^0.0.15",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "concurrently \"npm run react-start\" \"npm run electron-dev\" \"npm run electron-start\"",
    "react-start": "cross-env BROWSER=none npm start",
    "electron-dev": "tsc -p tsconfig.electron.json --watch",
    "electron-start": "wait-on tcp:3000 && wait-on dist-electron/main.js && cross-env NODE_ENV=development electron ./dist-electron/main.js",
    "electron-build": "tsc -p tsconfig.electron.json && cross-env NODE_ENV=production electron ./dist-electron/main.js",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "dotenv -e .env electron-forge publish"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-rpm": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.10.2",
    "@electron-forge/plugin-fuses": "^7.10.2",
    "@electron-forge/plugin-webpack": "^7.10.2",
    "@electron-forge/publisher-github": "^7.10.2",
    "@electron/fuses": "^1.8.0",
    "@types/node": "^24.9.1",
    "autoprefixer": "^10.4.21",
    "dotenv-cli": "^11.0.0",
    "electron": "^39.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "tailwindcss-animate": "^1.0.7",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5",
    "wait-on": "^9.0.1"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "asar": true,
        "icon": "./public/logo512.png",
        "extraResource": [
          "./build"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "course_player",
            "authors": "dannsb",
            "description": "A video course player application for local video files"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "linux"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "dannsb",
              "name": "course-player"
            },
            "prerelease": false,
            "draft": true
          }
        }
      ]
    }
  }
}
