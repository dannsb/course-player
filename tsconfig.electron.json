{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist-electron",
    "noEmit": false,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["electron/**/*"],
  "exclude": ["node_modules"]
}

